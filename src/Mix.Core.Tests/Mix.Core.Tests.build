<?xml version="1.0"?>
<project name="Mix.Core.Tests" default="build">

  <property name="name" value="Mix.Core.Tests"/>

  <target name="build" description="Builds the Mix.Core.Tests assembly">
    <csc target="library" warnaserror="true" debug="true" output="${build.dir}/${name}.dll">
      <sources>
        <include name="**/*.cs" />
        <include name="../CommonAssemblyInfo.cs" />
      </sources>
      <references>
        <lib>
          <include name="${build.dir}" />
          <include name="${lib.dir}" />
        </lib>
        <include name="Mix.Core.dll" />
        <include name="${lib.dir}/nunit.framework.dll" />
      </references>
    </csc>
  </target>

</project>