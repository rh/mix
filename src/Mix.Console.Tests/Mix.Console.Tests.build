<?xml version="1.0"?>
<project name="Mix.Console.Tests" default="build">

  <property name="name" value="Mix.Console.Tests"/>

  <target name="build" description="Builds the Mix.Console.Tests assembly">
    <csc target="library" warnaserror="true" debug="true"
         output="${build.dir}/${name}.dll" doc="${build.dir}/${name}.xml">
      <nowarn>
        <!-- 1591: Missing XML comment for publicly visible type or member 'Type_or_Member' -->
        <warning number="1591" />
        <!-- 1573: Parameter 'parameter' has no matching param tag in the XML comment for 'parameter' (but other parameters do) -->
        <warning number="1573" />
      </nowarn>
      <sources>
        <include name="**/*.cs" />
        <include name="../CommonAssemblyInfo.cs" />
      </sources>
      <resources dynamicprefix="true" prefix="${name}">
        <include name="**/*.resx"/>
      </resources>
      <references>
        <lib>
          <include name="${build.dir}" />
          <include name="${lib.dir}" />
        </lib>
        <include name="Mix.Core.dll" />
        <include name="Mix.Actions.dll" />
        <include name="mix.exe" />
        <include name="${lib.dir}/nunit.framework.dll" />
        <!-- NOTE: log4net.dll has to be explicitly referenced or compiling on Mono fails -->
        <include name="log4net.dll" />
      </references>
    </csc>
  </target>

</project>